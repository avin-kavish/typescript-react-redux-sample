{
  "extends": [
    "tslint:latest",
    "tslint-react"
  ],
  "rules": {
    "variable-name": {
      "options": [
        "allow-leading-underscore",
        "ban-keywords"
      ]
    },
    "interface-over-type-literal": false,
    "semicolon": false,
    "curly": false,
    "no-unused-expression": false,
    "no-submodule-imports": [
      true,
      "rxjs",
      "react-hot-loader"
    ],
    "no-implicit-dependencies": [
      true,
      [
        "types",
        "react-generics"
      ]
    ],
    "jsx-no-lambda": false,
    "jsx-no-multiline-js": false,
    "indent": [
      true,
      "spaces",
      2
    ],
    "jsx-boolean-value": false,
    "space-before-function-paren": [
      true,
      {
        "anonymous": "always"
      }
    ],
    "array-type": false,
    "arrow-parens": false,
    "deprecation": {
      "severity": "warn"
    },
    "import-blacklist": [
      true,
      "rxjs/Rx"
    ],
    "interface-name": false,
    "max-classes-per-file": false,
    "max-line-length": [
      true,
      140
    ],
    "new-parens": false,
    "member-access": false,
    "member-ordering": [
      true,
      {
        "order": [
          "static-field",
          "instance-field",
          "static-method",
          "instance-method"
        ]
      }
    ],
    "no-consecutive-blank-lines": false,
    "no-console": [
      true,
      "debug",
      "info",
      "time",
      "timeEnd",
      "trace"
    ],
    "no-empty": false,
    "no-inferrable-types": [
      true,
      "ignore-params"
    ],
    "no-non-null-assertion": true,
    "no-redundant-jsdoc": true,
    "no-switch-case-fall-through": true,
    "no-use-before-declare": false,
    "no-var-requires": false,
    "object-literal-key-quotes": [
      true,
      "as-needed"
    ],
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "quotemark": [
      true,
      "single",
      "jsx-double",
      "avoid-escape"
    ],
    "no-shadowed-variable": false,
    "trailing-comma": false
  }
}
